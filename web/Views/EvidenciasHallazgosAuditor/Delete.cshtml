@model web.Models.Evidencias

@{
    ViewBag.Title = "Eliminar evidencia";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="col-md-offset-3 col-md-6">
    <h4>¿Está seguro que desea eliminar esta evidencia?</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Evidencia)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Evidencia)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.DescripcionEvidencia)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DescripcionEvidencia)
        </dd>

        <dt>
            @Html.DisplayName("Nombre archivo")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NombreDoc)
        </dd>



    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color text-center">
            <input type="submit" value="Eliminar " class="btn btn-danger" />
            @Html.ActionLink("Cancelar", "Index", new { id = Model.IdHallazgo }, new { @class = "btn btn-success" })
        </div>
    }
</div>
