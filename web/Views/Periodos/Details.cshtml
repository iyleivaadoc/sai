@model web.Models.Periodos

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="col-md-offset-3 col-md-6">
    <h4>Periodo</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.NombrePeriodo)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NombrePeriodo)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.DescripcionPeriodo)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DescripcionPeriodo)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.FechaInicio)
        </dt>

        <dd>
            @{ var fi = Model.FechaInicio.ToString("dd/MM/yyyy");
               var ff = Model.FechaFin.ToString("dd/MM/yyyy"); }
            @Html.DisplayFor(model => fi)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.FechaFin)
        </dt>

        <dd>
            @Html.DisplayFor(model => ff)
        </dd>

        

    </dl>
    <p class="text-center">
        @Html.ActionLink("Editar", "Edit", new { id = Model.IdPeriodo }, new { @class="btn btn-warning"} ) 
        @Html.ActionLink("Cancelar", "Index",null,new { @class="btn btn-success"})
    </p>
</div>

