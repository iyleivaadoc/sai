<div class="col-md-12" style="position: relative; top: 60px; padding-right: 0px; background-color: white;">
    <div style="overflow-x:auto;">
        <table class="table table-bordered table-condensed table-responsive table-striped table-hover">
            <tr>
                @*<th>
                        @Html.DisplayNameFor(model => model.Estado.Estado)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Plan.NombrePlan)
                    </th>*@

                <th style="width:15%">
                    @Html.DisplayNameFor(model => model.First().Auditoria)
                </th>
                <th style="width:25%">
                    @Html.DisplayNameFor(model => model.First().DescripcionAuditoria)
                </th>
                <th style="width:5%">
                    @Html.DisplayNameFor(model => model.First().FechaInicio)
                </th>
                <th style="width:10%">
                    @Html.DisplayNameFor(model => model.First().FechaFin)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.First().Duracion)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.First().IdUsuarioRealiza)
                </th>

                <th style="width:15%;"><label>Opciones</label></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    @*<td>
                            @Html.DisplayFor(modelItem => item.Estado.Estado)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Plan.NombrePlan)
                        </td>*@

                    <td>
                        @Html.DisplayFor(modelItem => item.Auditoria)
                    </td>
                    <td style="text-align:justify;">
                        @Html.DisplayFor(modelItem => item.DescripcionAuditoria)
                    </td>
                    <td>
                        @Html.EditorFor(modelItem => item.FechaInicio, new { htmlAttributes = new { @class = "editFechaToDisplay", @disabled = "disabled", @style = "" } })
                    </td>
                    <td>
                        @Html.EditorFor(modelItem => item.FechaFin, new { htmlAttributes = new { @class = "editFechaToDisplay", @disabled = "disabled" } })
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Duracion)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.UsuarioRealiza.NombreCompleto)
                    </td>

                    <td style="vertical-align: middle;">
                        @Html.ActionLink(" ", "Index", "Fases", new { IdAuditoria = item.IdAuditoria, nombreAuditoria = item.Auditoria }, new { @class = "btn btn-success btn-sm glyphicon glyphicon-list-alt", @title = "Inspeccionar fases" })
                        @Html.ActionLink(" ", "Details", new { id = item.IdAuditoria }, new { @class = "btn btn-info btn-sm glyphicon glyphicon-info-sign", @title = "Detalles" })
                        @Html.ActionLink(" ", "Edit", new { id = item.IdAuditoria, idPlan = ViewBag.idPlan }, new { @class = "btn btn-warning btn-sm glyphicon glyphicon-edit", @title = "Editar" })
                        @Html.ActionLink(" ", "Delete", new { id = item.IdAuditoria }, new { @class = "btn btn-danger btn-sm glyphicon glyphicon-remove-circle", @title = "Eliminar" })
                    </td>
                </tr>
            }

        </table>
    </div>
    Mostrando de @Model.FirstItemOnPage a @Model.LastItemOnPage De @Model.TotalItemCount
    @Html.PagedListPager(Model, page => Url.Action("Index",
    new
    {
