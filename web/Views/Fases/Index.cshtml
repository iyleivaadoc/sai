@model IEnumerable<web.Models.Fases>

@{
    ViewBag.Title = ViewBag.nombreAuditoria;
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div style="position: relative;">
    <div class="row col-md-12" style="position: absolute;">
        <h2 class="col-md-6">@ViewBag.nombreAuditoria</h2>
        @*<div class="col-md-5" style="top: 10px;">
            @using (Html.BeginForm())
            {
                <p>
                    <input type="submit" value="Buscar" class="btn btn-info col-md-2" style="margin-left: 5px;" />
                    @Html.TextBox("SearchString", null, new { @class = "form-control col-md-6", @style = "margin-left: 5px;" })
                </p>
            }
        </div>*@
    </div>
    <div style="position: absolute; top: 20px; right:0px;">
        @Html.ActionLink("Fases por defecto", "IndexDefault", new { idAuditoria = ViewBag.idAuditoria, nombreAuditoria = ViewBag.nombreAuditoria}, new { @class = "btn btn-info" })
        @Html.ActionLink("Nueva Fase", "Create", new { idAuditoria = ViewBag.idAuditoria, nombreAuditoria = ViewBag.nombreAuditoria }, new { @class = "btn btn-success" })
        <br /><br />
    </div>
</div>


<div class="col-md-12" style="position: relative; top: 60px; padding-right: 0px; background-color: white;">
    <div style="overflow-x:auto;">
        <table class="table table-bordered table-condensed table-responsive table-striped table-hover">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Fase)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Porcentaje)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FechaInicio)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FechaFin)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Duracion)
                </th>
                <th>Opciones</th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Fase)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Porcentaje)
                    </td>
                    <td>
                        @Html.EditorFor(modelItem => item.FechaInicio, new { htmlAttributes = new { @class = "editFechaToDisplay", @disabled = "disabled", @style = "" } })
                    </td>
                    <td>
                        @Html.EditorFor(modelItem => item.FechaFin, new { htmlAttributes = new { @class = "editFechaToDisplay", @disabled = "disabled", @style = "" } })
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Duracion)
                    </td>
                    <td>
                        @Html.ActionLink(" ", "Details", new { id = item.IdFase }, new { @class = "btn btn-info btn-sm glyphicon glyphicon-info-sign", @title = "Detalles" })
                        @Html.ActionLink(" ", "Edit", new { id = item.IdFase }, new { @class = "btn btn-warning btn-sm glyphicon glyphicon-edit", @title = "Editar" })
                        @Html.ActionLink(" ", "Delete", new { id = item.IdFase }, new { @class = "btn btn-danger btn-sm glyphicon glyphicon-remove-circle", @title = "Eliminar" })
                    </td>
                </tr>
            }

        </table>
    </div>
</div>
