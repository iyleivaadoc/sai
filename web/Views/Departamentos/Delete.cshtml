@model web.Models.Departamentos

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="col-md-offset-3 col-md-6">
    <h4>¿Realmente desea eliminar este departamento?</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Direccion.DireccionNombre)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Direccion.DireccionNombre)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.NombreDepartamento)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NombreDepartamento)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.DescripcionDepartamento)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DescripcionDepartamento)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.IdPersonaACargo)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.PersonaACargo.NombreCompleto)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color text-center">
            <input type="submit" value="Eliminar" class="btn btn-danger" />
            @Html.ActionLink("Cancelar", "Index", null,new { @class="btn btn-success"})
        </div>
    }
</div>
