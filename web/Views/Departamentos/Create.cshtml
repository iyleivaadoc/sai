@model web.Models.Departamentos

@{
    ViewBag.Title = "Registrar Departamento";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal col-md-offset-3 col-md-6">
        <h4>Nuevo Departamento</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.NombreDepartamento, htmlAttributes: new { @class = "control-label col-md-4" })
            <div class="col-md-8">
                @Html.EditorFor(model => model.NombreDepartamento, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.NombreDepartamento, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.DescripcionDepartamento, htmlAttributes: new { @class = "control-label col-md-4" })
            <div class="col-md-8">
                @Html.TextAreaFor(model => model.DescripcionDepartamento, new { @class = "form-control" , @style="height:100px;"})
                @Html.ValidationMessageFor(model => model.DescripcionDepartamento, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.IdPersonaACargo, htmlAttributes: new { @class = "control-label col-md-4" })
            <div class="col-md-8">
                @*@Html.EditorFor(model => model.IdPersonaACargo, new { htmlAttributes = new { @class = "form-control" } })*@
                @Html.DropDownList("IdPersonaACargo", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.IdPersonaACargo, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.IdDireccion, htmlAttributes: new { @class = "control-label col-md-4" })
            <div class="col-md-8">
                @Html.DropDownList("IdDireccion", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.IdDireccion, "", new { @class = "text-danger" })
            </div>
        </div>
        @Html.HiddenFor(model=>model.FechaCrea)
        <div class="form-group">
            <div class="col-md-12 text-center">
                <input type="submit" value="Crear" class="btn btn-success" />
                @Html.ActionLink("Cancelar", "Index",null,new { @class="btn btn-warning"})
            </div>
        </div>
    </div>
}

