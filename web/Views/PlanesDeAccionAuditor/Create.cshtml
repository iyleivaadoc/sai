@model web.Models.PlanesDeAccion

@{
    ViewBag.Title = "Crear plan";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal col-md-offset-3 col-md-6">
        <h4>Nuevo Plan de Acción, @ViewBag.nombreHallazgo</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.NombrePlanAccion, htmlAttributes: new { @class = "control-label col-md-4" })
            <div class="col-md-8">
                @Html.EditorFor(model => model.NombrePlanAccion, new { htmlAttributes = new { @class = "form-control", @disabled="disabled" } })
                @Html.HiddenFor(model=>model.NombrePlanAccion)
                @Html.ValidationMessageFor(model => model.NombrePlanAccion, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.DescripcionPlanAccion, htmlAttributes: new { @class = "control-label col-md-4" })
            <div class="col-md-8">
                @Html.TextAreaFor(model => model.DescripcionPlanAccion, new { @class = "form-control", @style="height:100px" })
                @Html.ValidationMessageFor(model => model.DescripcionPlanAccion, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.FechaVencimiento, htmlAttributes: new { @class = "control-label col-md-4" })
            <div class="col-md-8">
                @Html.EditorFor(model => model.FechaVencimiento, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.FechaVencimiento, "", new { @class = "text-danger" })
            </div>
        </div>

        @Html.HiddenFor(m=>m.IdHallazgo)
       

        <div class="form-group">
            @Html.LabelFor(model => model.IdEncargado, htmlAttributes: new { @class = "control-label col-md-4" })
            <div class="col-md-8">
                @Html.DropDownList("IdEncargado", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.IdEncargado, "", new { @class = "text-danger" })
            </div>
        </div>

        @*<div class="form-group">
            @Html.LabelFor(model => model.IdDirectorValidador, htmlAttributes: new { @class = "control-label col-md-4" })
            <div class="col-md-8">
                @Html.DropDownList("IdDirectorValidador", null, "Seleccione ...", htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.IdDirectorValidador, "", new { @class = "text-danger" })
            </div>
        </div>*@

        @Html.HiddenFor(m=>m.FechaCrea)

        <div class="form-group">
            <div class="col-md-12 text-center">
                <input type="submit" value="Crear" class="btn btn-success" />
                @Html.ActionLink("Cancelar", "Index",new { id=Model.IdHallazgo},new { @class="btn btn-warning"})
            </div>
        </div>
    </div>
}

