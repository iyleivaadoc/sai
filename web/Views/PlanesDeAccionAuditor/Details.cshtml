@model web.Models.PlanesDeAccion

@{
    ViewBag.Title = "Detalles de plan";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="col-md-offset-3 col-md-6">
    <h4>Detalles Plan de Acción, @ViewBag.nombreHallazgo</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.NombrePlanAccion)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NombrePlanAccion)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.DescripcionPlanAccion)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DescripcionPlanAccion)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.IdEncargado)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Encargado.NombreCompleto)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.FechaVencimiento)
        </dt>

        <dd>
            @{ var fecha = Model.FechaVencimiento.ToShortDateString();}
            @Html.DisplayFor(model => fecha)
        </dd>


    </dl>
    <p class="text-center">
        @if (Model.IdEstado != 2)
        {
            @Html.ActionLink("Editar", "Edit", new { id = Model.IdPlanAccion }, new { @class = "btn btn-warning" })
        }
        @Html.ActionLink("Cancelar", "Index", new { id = Model.IdHallazgo }, new { @class = "btn btn-success" })
    </p>
</div>
